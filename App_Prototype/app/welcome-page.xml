  <ScrollView>
    <StackLayout class="p-6">
      <!-- App Header -->
      <StackLayout class="text-center mb-8">
        <Label text="NeuroType Keyboard" class="text-3xl font-bold text-gray-800 mb-2" />
        <Label text="Tracking typing behavior for medical analysis" class="text-lg text-gray-600" textWrap="true" />
      </StackLayout>

      <!-- App Icon/Illustration -->
      <StackLayout class="bg-gray-900 rounded-2xl p-6 mb-8 mx-4">
        <GridLayout rows="auto, auto, auto, auto, auto" columns="*, *, *, *, *, *, *, *, *, *" class="mb-4">
          <!-- Simulated keyboard layout -->
          <Label row="0" col="0" text="1" class="text-orange-400 text-center text-xs p-1" />
          <Label row="0" col="1" text="2" class="text-orange-400 text-center text-xs p-1" />
