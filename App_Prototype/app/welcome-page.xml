          <Label row="0" col="8" text="9" class="text-orange-400 text-center text-xs p-1" />
          <Label row="0" col="9" text="0" class="text-orange-400 text-center text-xs p-1" />
          
          <Label row="1" col="0" text="Q" class="text-orange-400 text-center text-xs p-1" />
          <Label row="1" col="1" text="W" class="text-orange-400 text-center text-xs p-1" />
          <Label row="1" col="2" text="E" class="text-orange-400 text-center text-xs p-1" />
          <Label row="1" col="3" text="R" class="text-orange-400 text-center text-xs p-1" />
